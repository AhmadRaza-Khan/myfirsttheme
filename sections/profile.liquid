<div>
  <div class="profile">
    <h3>
      {{ section.settings.user_name }}
    </h3>
    <p>{{ section.settings.bio }} </p>
    <img src="{{ section.settings.user_img | img_url: "300x300" }}" alt="">
  </div>

</div>

{%  schema  %} 
{
"name": "Profile",
"settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Profile Settings"
    },
    {
        "type": "image_picker",
        "id": "user_img",
        "label": "User Photo"
    },
    {
        "type": "text",
        "id": "user_name",
        "label": "User Name"
    },
    {
      "type": "text",
      "id": "bio",
      "label": "user_bio"
    }
  ],
"presets": [
    {
      "category": "Profile",
      "name": "User Profile"
    }
  ]
}
{% endschema %}